# Backend API Configuration

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./wellbeing.db
DATABASE_ENCRYPTION_KEY=your-secret-encryption-key-here

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MQTT Broker
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=wellbeing

# Privacy Features
VPN_ENABLED=True
CALLER_ID_MASKING=True
AUTO_WIPE_ENABLED=True

# AI/ML
ML_MODEL_PATH=../ai-models/models
NOTIFICATION_CLASSIFIER_MODEL=notification_classifier.tflite
CONTEXT_DETECTOR_MODEL=context_detector.tflite

# Redis (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
