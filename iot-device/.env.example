# IoT Device Configuration (Raspberry Pi)

# Device Identification
DEVICE_ID=iot-device-001
DEVICE_NAME=Wellbeing Assistant

# MQTT Broker
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=wellbeing

# Sensor Configuration
NOISE_THRESHOLD_DB=70
LIGHT_THRESHOLD_LUX=200
MOTION_SENSITIVITY=medium

# Sensor Update Intervals (seconds)
SENSOR_READ_INTERVAL=5
PUBLISH_INTERVAL=5

# GPIO Pin Assignments (BCM numbering)
PIR_MOTION_PIN=17
DHT_SENSOR_PIN=4
LED_INDICATOR_PIN=27

# I2C Configuration (for light sensor)
I2C_BUS=1
LIGHT_SENSOR_ADDRESS=0x23

# Audio Configuration
AUDIO_SAMPLE_RATE=44100
AUDIO_CHUNK_SIZE=1024

# Automation Settings
AUTO_ADJUST_LIGHTING=True
AUTO_NOISE_DETECTION=True
BREAK_REMINDER_ENABLED=True
